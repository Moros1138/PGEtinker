    "golden-layout": "^1.5.9",
    "monaco-editor": "^0.47.0",
    "vite": "^5.2.7"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
